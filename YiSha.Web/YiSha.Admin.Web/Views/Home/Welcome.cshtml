</div>
<script src="~/lib/moment/moment.min.js"></script>
<script type="text/javascript">
    var _branchId = ys.getCookie("BranchId");
    var vStartDate = moment().format("YYYY-MM-DD");
    laydate.render({
        elem: '#startDate',
        format: 'yyyy-MM-dd',
        value: vStartDate,
        done: function (value, date, endDate) {
            // 回调函数
            //$("#endDate").focus();
                searchGrid();
                searchGrid2();
                searchGrid3();
        }
    });

    $(function () {
        initGrid();
        initGrid2();
        initGrid3();
    });

    function initGrid() {
        var queryUrl = '@Url.Content("~/HotelManage/Memo/GetPageListJson")';
        $('#gridTable').ysTable({
            url: queryUrl,
            onEditableSave: onEditableSave,
            showColumns: false,                  // 是否显示所有的列（选择显示的列）
            showRefresh: false,                  // 是否显示刷新按钮
            showToggle:  false,                  // 是否显示详细视图和列表视图的切换按钮
            columns: [
                { checkbox: true, visible: true },
                { field: 'Id', title: 'Id', visible: false },
                {
                    field: 'BaseCreateTime', title: '创建时间', formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                },
                {
                    field: 'BaseModifyTime', title: '修改时间',  formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                },
                {
                    field: 'ExecuteDate', title: '截止日期',
                    formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd");
                    },
                    editable: {
                        type: 'date',
                        clear: false,
                        placement: 'bottom',
                        showbuttons:false,
                        //mode:"inline",
                        datepicker: { language: 'zh-CN'},//中文支持
                        validate: function (value) {
                            if (value == '') { return '不能为空!' }
                        }
                    }

                },
                {
                    field: 'Memo',
                    title: '备忘录',
                    editable: {
                        type: 'text'
                    }

                },
                {
                    field: 'IsFinish',
                    title: '进度',
                    align: 'center',
                    editable: {
                        type: 'select',
                        emptytext: "",
                        source: [{
                            value: 0,
                            text: "未完成"
                        }, {
                            value: 1,
                            text: "已完成"
                        }]
                    }
                },
                { field: 'StewardName', title: '负责人' },
                { field: 'BranchName', title: '门店' },
                { field: 'CreateName', title: '创建人' },
                { field: 'ModifierName', title: '修改人' }
            ],
            queryParams: function (params) {
                var pagination = $('#gridTable').ysTable('getPagination', params);
                var queryString = $('#searchDiv').getWebControls(pagination);
                queryString.BranchId = _branchId;
                queryString.IsFinish = 0;
                queryString.StartDate = $("#startDate").text();
                return queryString;
            }
        });
    }

    function initGrid2() {
        var queryUrl = '@Url.Content("~/HotelManage/Order/GetPageListJsonForDay")';
        $('#gridTable2').ysTable({
            url: queryUrl,
            onEditableSave: onEditableSave2,
            showColumns: false,                  // 是否显示所有的列（选择显示的列）
            showRefresh: false,                  // 是否显示刷新按钮
            showToggle: false,                  // 是否显示详细视图和列表视图的切换按钮
            pagination:false,
            showFooter: false,
            pageSize: 50,
            columns: [
                { field: 'Id', title: 'Id', visible: false },
                {
                    field: 'BaseCreateTime', title: '创建时间', formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                },
                {
                    field: 'BaseModifyTime', title: '修改时间', formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                },
                { field: 'OrderName', title: '客人姓名' },
                { field: 'Nickname', title: '昵称' },
                { field: 'Phone', title: '手机号' },
                { field: 'OrderNumber', title: '订单号' },
                { field: 'HouseType', title: '房型' },
                { field: 'HouseNumber', title: '房号' },
                {
                    field: 'StartDate', title: '入住日期', formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd");
                    }
                },
                {
                    field: 'EndDate', title: '离店日期', formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd");
                    }
                },
                {
                    field: 'UnitPrice',
                    title: '房价',
                    formatter: function (value, row, index) {
                        return value.toFixed(2);
                    },
                    footerFormatter: function (value) {
                        var sumAmount = 0;
                        for (var i in value) {
                            sumAmount += parseFloat(value[i].UnitPrice);
                        }
                        return "￥" + sumAmount.toFixed(2);
                    }
                },
                { field: 'HouseCount', title: '总间夜数' },
                {
                    field: 'State',
                    title: '订单状态',
                    align: 'center',
                    editable: {
                        type: 'select',
                        emptytext: "",
                        source: [{
                            value: 0,
                            text: "预订"
                        }, {
                            value: 1,
                            text: "入住"
                        }, {
                            value: 2,
                            text: "退房"
                        }, {
                            value: 3,
                            text: "删除"
                        }]
                    }

                },
                {
                    field: 'IsFinish',
                    title: '门店预审',
                    align: 'center',
                    editable: {
                        type: 'select',
                        emptytext: "",
                        source: [{
                            value: 0,
                            text: "未审核"
                        }, {
                            value: 1,
                            text: "已审核"
                        }]
                    }
                },
                {
                    field: 'IsFinance',
                    title: '财务审核',
                    align: 'center',
                    editable: {
                        type: 'select',
                        emptytext: "",
                        source: [{
                            value: 0,
                            text: "未审核"
                        }, {
                            value: 1,
                            text: "已审核"
                        }]
                    }
                },
                { field: 'Remark', title: '备注' },
                { field: 'StewardName', title: '管家' },
                { field: 'ChannelName', title: '渠道' },
                { field: 'BranchName', title: '门店' },
                { field: 'CreateName', title: '创建人' },
                { field: 'ModifierName', title: '修改人' },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function (value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-success btn-xs" href="#" onclick="showProceedsIndex(\'' + row.Id + '\')"><i class="fa fa-edit"></i>明细</a>');
                        return actions.join('');
                    }
                }
            ],
            queryParams: function (params) {
                var pagination = $('#gridTable2').ysTable('getPagination', params);
                var queryString = $('#searchDiv').getWebControls(pagination);
                queryString.BranchId = _branchId;
                queryString.StartDate = $("#startDate").text();
                return queryString;
            }
        });
    }

